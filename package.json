{
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "play",
    "docs"
  ],
  "packageManager": "pnpm@10.6.5",
  "scripts": {
    "gen:version": "tsx scripts/gen-version.ts",
    "lint:eslint": "eslint --fix --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "lint:prettier": "prettier --write --cache .",
    "test": "vitest",
    "prepare": "husky",
    "lint:lint-staged": "lint-staged",
    "commit": "git add -A && czg",
    "postinstall": "pnpm gen:version"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@hitler/components": "workspace:*",
    "@hitler/constants": "workspace:*",
    "@hitler/directives": "workspace:*",
    "@hitler/hooks": "workspace:*",
    "@hitler/utils": "workspace:*",
    "dayjs": "^1.11.18",
    "element-plus": "^2.11.7",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/runtime-core": "^3.5.22",
    "@vue/shared": "^3.5.22",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "consola": "^3.4.2",
    "cz-git": "^1.12.0",
    "czg": "^1.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.26.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.2",
    "resize-observer-polyfill": "^1.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "unplugin-vue-macros": "^2.14.5",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.7"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
